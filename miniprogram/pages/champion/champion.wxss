.champion-page {
  padding-bottom: 30rpx;
}

.champion-header {
  display: flex;
  align-items: center;
  gap: 14rpx;
  margin-bottom: 14rpx;
}

.hero-avatar-wrap {
  flex-shrink: 0;
}

.hero-avatar {
  width: 84rpx;
  height: 84rpx;
  border-radius: 22rpx;
  background: #e5e7eb;
}

.hero-avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6b7280;
  font-size: 36rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #f3f4f6, #d1d5db);
}

.header-main {
  min-width: 0;
}

.name {
  margin-bottom: 6rpx;
}

.section {
  margin-bottom: 14rpx;
}

.section-top {
  margin-bottom: 12rpx;
}

.section-title {
  margin-bottom: 4rpx;
}

.segment-row,
.sort-mode-row {
  display: flex;
  gap: 8rpx;
  background: #f3f4f6;
  border-radius: 14rpx;
  padding: 6rpx;
  margin-bottom: 12rpx;
}

.segment-item,
.mode-item {
  flex: 1;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #4b5563;
  font-size: 24rpx;
}

.segment-item.active,
.mode-item.active {
  background: #ffffff;
  color: #111827;
  font-weight: 600;
  box-shadow: 0 6rpx 14rpx rgba(15, 23, 42, 0.08);
}

.augment-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.augment-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10rpx;
  padding: 16rpx;
  border: 1rpx solid #edf0f2;
  border-radius: 16rpx;
  background: #fff;
}

.aug-left {
  display: flex;
  align-items: center;
  min-width: 0;
  flex: 1;
}

.augment-icon {
  position: relative;
  width: 56rpx;
  height: 56rpx;
  border-radius: 14rpx;
  margin-right: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: visible;
}

.augment-icon::before,
.augment-icon::after {
  content: "";
  position: absolute;
  inset: -3rpx;
  border-radius: 16rpx;
  pointer-events: none;
}

.augment-icon::before {
  border: 2rpx solid #cbd5e1;
}

.augment-icon::after {
  opacity: 0;
}

.rarity-prismatic::before {
  border-color: #a855f7;
}

.rarity-prismatic::after {
  opacity: 1;
  box-shadow: 0 0 18rpx rgba(168, 85, 247, 0.58);
}

.rarity-gold::before {
  border-color: #f59e0b;
}

.rarity-gold::after {
  opacity: 1;
  box-shadow: 0 0 14rpx rgba(245, 158, 11, 0.42);
}

.rarity-silver::before {
  border-color: #94a3b8;
}

.rarity-silver::after {
  opacity: 1;
  box-shadow: 0 0 8rpx rgba(148, 163, 184, 0.32);
}

.augment-icon-img {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  position: relative;
  z-index: 2;
  background: #e5e7eb;
}

.augment-icon-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #f3f4f6, #d1d5db);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6b7280;
  font-size: 28rpx;
  font-weight: 700;
  position: relative;
  z-index: 2;
}

.aug-text {
  min-width: 0;
}

.aug-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 4rpx;
}

.aug-right {
  text-align: right;
}

.metric {
  font-size: 25rpx;
  color: #1f2937;
  line-height: 1.3;
}

.metric-sub {
  font-size: 21rpx;
  color: #9ca3af;
  line-height: 1.3;
}

.combo-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.combo-row {
  border-radius: 16rpx;
  padding: 16rpx;
  background: #f9fafb;
  border: 1rpx solid #eef0f3;
}

.combo-rank {
  font-size: 23rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.combo-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.combo-tag {
  background: #ffffff;
  border: 1rpx solid #e5e7eb;
  color: #111827;
  border-radius: 999rpx;
  padding: 6rpx 14rpx;
  font-size: 23rpx;
}

.status {
  margin-top: 12rpx;
  text-align: center;
  font-size: 24rpx;
}

.loading {
  color: #2563eb;
}

.error {
  color: #dc2626;
}

.empty {
  color: #6b7280;
}

.load-more {
  margin-top: 14rpx;
  border-radius: 16rpx;
  border: 1rpx solid #d1d5db;
  background: #fff;
  color: #111827;
  font-size: 26rpx;
}
