.battle-page {
  padding-bottom: 34rpx;
}

.battle-top,
.hero-picker,
.round-card,
.candidates-card,
.reco-card,
.footer-actions,
.done-card {
  margin-bottom: 14rpx;
}

.section-title {
  font-size: 30rpx;
  color: #111827;
  font-weight: 700;
  margin-bottom: 10rpx;
}

.status {
  margin: 8rpx 0 14rpx;
  text-align: center;
  font-size: 24rpx;
}

.loading {
  color: #2563eb;
}

.error {
  color: #dc2626;
}

.search-input,
.picker-input {
  width: 100%;
  height: 72rpx;
  border-radius: 14rpx;
  border: 1rpx solid #e5e7eb;
  background: #f9fafb;
  padding: 0 18rpx;
  font-size: 26rpx;
  margin-bottom: 12rpx;
}

.hero-list {
  max-height: 60vh;
}

.hero-item {
  display: flex;
  align-items: center;
  padding: 14rpx;
  border: 1rpx solid #eef0f3;
  border-radius: 14rpx;
  margin-bottom: 10rpx;
  background: #fff;
}

.hero-avatar {
  width: 68rpx;
  height: 68rpx;
  border-radius: 16rpx;
  background: #e5e7eb;
  flex-shrink: 0;
}

.hero-avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #6b7280;
  font-weight: 700;
  background: linear-gradient(135deg, #f3f4f6, #d1d5db);
}

.hero-meta {
  flex: 1;
  min-width: 0;
  margin: 0 12rpx;
}

.hero-name {
  font-size: 28rpx;
  color: #111827;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.hero-enter {
  font-size: 24rpx;
  color: #2563eb;
}

.round-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.round-steps {
  margin-top: 10rpx;
  display: flex;
  gap: 10rpx;
}

.round-step {
  width: 40rpx;
  height: 40rpx;
  border-radius: 999rpx;
  border: 1rpx solid #d1d5db;
  color: #9ca3af;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
}

.round-step.active {
  background: #111827;
  border-color: #111827;
  color: #fff;
}

.picked-line {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 12rpx;
}

.picked-chip {
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  border: 1rpx solid #d1d5db;
  background: #fff;
  color: #374151;
  font-size: 22rpx;
}

.picked-empty {
  color: #9ca3af;
  font-size: 23rpx;
}

.photo-card {
  margin-top: 12rpx;
  border: 1rpx dashed #d1d5db;
  border-radius: 14rpx;
  padding: 12rpx;
  background: #fafafa;
}

.photo-actions {
  display: flex;
  gap: 10rpx;
  margin-top: 8rpx;
}

.photo-preview {
  margin-top: 10rpx;
  width: 100%;
  height: 240rpx;
  border-radius: 14rpx;
  background: #e5e7eb;
}

.ocr-status {
  margin-top: 10rpx;
  font-size: 23rpx;
}

.ocr-loading {
  color: #2563eb;
}

.ocr-error {
  color: #dc2626;
}

.ocr-fallback {
  margin-top: 8rpx;
}

.small-btn,
.primary-btn,
.mini-ghost {
  border-radius: 14rpx;
}

.small-btn {
  height: 66rpx;
  line-height: 66rpx;
  font-size: 24rpx;
  background: #fff;
  border: 1rpx solid #d1d5db;
  color: #111827;
}

.primary-btn {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 25rpx;
  background: #111827;
  color: #fff;
  border: none;
}

.mini-ghost {
  height: 52rpx;
  line-height: 52rpx;
  font-size: 22rpx;
  padding: 0 14rpx;
  background: #fff;
  border: 1rpx solid #d1d5db;
  color: #4b5563;
}

.candidate-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.candidate-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  border: 1rpx solid #edf0f2;
  border-radius: 14rpx;
  padding: 12rpx;
  background: #fff;
}

.candidate-main {
  flex: 1;
  min-width: 0;
}

.candidate-name {
  font-size: 27rpx;
  color: #111827;
  font-weight: 600;
}

.candidate-empty {
  color: #9ca3af;
  font-size: 23rpx;
  margin-top: 8rpx;
}

.candidate-actions {
  display: flex;
  gap: 10rpx;
  margin-top: 12rpx;
}

.reco-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 6rpx;
}

.reco-tag {
  padding: 4rpx 10rpx;
  border-radius: 999rpx;
  font-size: 20rpx;
  color: #fff;
}

.reco-tag.single {
  background: #2563eb;
}

.reco-tag.combo {
  background: #9333ea;
}

.reco-line {
  font-size: 25rpx;
  color: #111827;
  margin-bottom: 6rpx;
}

.augment-icon,
.candidate-icon {
  position: relative;
  width: 56rpx;
  height: 56rpx;
  border-radius: 14rpx;
  flex-shrink: 0;
}

.augment-icon::before,
.augment-icon::after,
.candidate-icon::before,
.candidate-icon::after {
  content: "";
  position: absolute;
  inset: -3rpx;
  border-radius: 16rpx;
  pointer-events: none;
}

.augment-icon::before,
.candidate-icon::before {
  border: 2rpx solid #cbd5e1;
}

.augment-icon::after,
.candidate-icon::after {
  opacity: 0;
}

.rarity-prismatic::before {
  border-color: #a855f7;
}

.rarity-prismatic::after {
  opacity: 1;
  box-shadow: 0 0 18rpx rgba(168, 85, 247, 0.58);
}

.rarity-gold::before {
  border-color: #f59e0b;
}

.rarity-gold::after {
  opacity: 1;
  box-shadow: 0 0 14rpx rgba(245, 158, 11, 0.42);
}

.rarity-silver::before {
  border-color: #94a3b8;
}

.rarity-silver::after {
  opacity: 1;
  box-shadow: 0 0 8rpx rgba(148, 163, 184, 0.32);
}

.augment-icon-img,
.candidate-icon-img {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background: #e5e7eb;
}

.candidate-icon-fallback {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #f3f4f6, #d1d5db);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6b7280;
  font-size: 28rpx;
  font-weight: 700;
}

.done-hero {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.picked-summary {
  margin-top: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.picked-item {
  border: 1rpx solid #eef0f3;
  border-radius: 12rpx;
  padding: 10rpx;
}

.picked-index {
  font-size: 22rpx;
  color: #6b7280;
}

.picked-name {
  font-size: 27rpx;
  color: #111827;
  font-weight: 600;
}

.summary-box {
  margin-top: 12rpx;
  background: #f9fafb;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 12rpx;
  font-size: 24rpx;
  color: #1f2937;
  white-space: pre-wrap;
  word-break: break-all;
}

.done-actions {
  display: flex;
  gap: 10rpx;
  margin-top: 12rpx;
}

.picker-mask {
  position: fixed;
  inset: 0;
  background: rgba(15, 23, 42, 0.4);
  z-index: 90;
}

.picker-panel {
  position: fixed;
  left: 20rpx;
  right: 20rpx;
  bottom: 20rpx;
  z-index: 91;
  background: #fff;
  border-radius: 20rpx;
  padding: 18rpx;
  box-shadow: 0 14rpx 34rpx rgba(15, 23, 42, 0.2);
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-close {
  font-size: 24rpx;
  color: #6b7280;
}

.picker-row {
  display: flex;
  gap: 8rpx;
}

.picker-row .picker-input {
  flex: 1;
}

.picker-list {
  max-height: 320rpx;
}

.picker-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  border-bottom: 1rpx solid #f1f5f9;
  padding: 10rpx 0;
}

.picker-meta {
  min-width: 0;
}

.picker-name {
  font-size: 26rpx;
  color: #111827;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
